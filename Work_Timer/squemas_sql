CREATE DATABASE EMPRESA;

USE EMPRESA;


CREATE TABLE FUNCIONARIOS (
    ID INT PRIMARY KEY,
    Nome VARCHAR(50),
    DataNasc DATE,
    Cargo VARCHAR(50),
    Salario DECIMAL(10, 2)
);
CREATE TABLE TAREFAS(
	ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
	DATA DATE NOT NULL,
	DESCRICAO VARCHAR(255),
	TEMPO INT NOT NULL
);